# Let's create 8 states for New Profile
class Questions(StatesGroup):
    Pass_city = State()
    Pass_date = State()
    Pass_time = State()
    Pass_name = State()
    Passport = State()
    DOB = State()
    MF = State()
    Check = State()


# Let's create 8 states for Pass
